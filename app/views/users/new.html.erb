<%=	provide(:title, 'User Signup') %>
<h1>Sign Up</h1>
<div class="col-md-7 col-md-offset-3" style="text-align: center">
  <%=	simple_form_for @user, html: {class: 'form-vertical'} do |t| %>
      <%=	 render 'shared/error_messages' %>
      <%=	 t.input :name, class: 'form-control' %>
      <%=	 t.input :email ,class: 'form-control'%>
      <%=	 t.input :password, class: 'form-control'%>
      <%=	 t.input :password_confirmation, class: 'form-control' %>
      <%=	 t.submit "Create Account", class: "btn btn-primary" %>
      <% end %>
</div>